@using Entities.Concreate.ViewModels;
@model UserLoginDTO
@{
    Layout = "_LoginRegisterLayout";
}


<form asp-action="Login">

    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <label class="form-label" asp-for="Email"></label>
        <input type="email" class="form-control" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Password">Şifre</label>
        <input type="password" class="form-control" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <button class="btn btn-primary mb-3" type="submit">Giriş</button>
</form>
<p>
    <a class="text-dark mt-3 " asp-area="" asp-controller="User" asp-action="Register">Üye ol</a>
</p>
<p>
    <a class="text-dark mt-3 ml-3" asp-area="" asp-controller="Ticket" asp-action="TicketControl">Bilet Kontrol</a>
</p>




