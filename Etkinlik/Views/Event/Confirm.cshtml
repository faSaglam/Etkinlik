@using Entitites.Concreate;
@model Event

<div class="card">
    <div class="card-header">
        <h5>@Model.Name</h5>
    </div>
    <div class="card-body">
        <p class="card-text">@Model.Description</p>
        <hr />
        <p class="card-text">Kişi Sayısı : @Model.Quoto</p>
        <p class="card-text">Kategori : @Model.DateTime</p>
        <p class="card-text">Kategori : @Model.EvenetID</p>


    </div>
</div>

<form asp-action="Confirm">
    
    <input type="hidden" asp-for="EvenetID" />
    <input type="submit" value="Onayla" class="btn btn-success" />
</form>